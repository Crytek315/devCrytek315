<meta charset='utf-8'>
<script>
var a = parseInt(prompt('Введите сумму вклада: '));
var b = parseInt(prompt('Введите процент ставки: % '));
var c = parseInt(prompt('Введите количество лет: '));
for (var d=1; d<=c; d++){
   a=a+a*b/100;
   alert('Год вложения: '+d+' Размер вклада на текущий год: '+a);
}
</script>
